# Variables de entorno para n8n + WhatsApp Bot

# Usuario y contraseña de n8n
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Puerto de ejecución
N8N_PORT=5678

# URL base (ajústala según el servidor o dominio donde despliegues)
N8N_HOST=localhost
WEBHOOK_URL=http://localhost:5678/

# API de WhatsApp (ejemplo con 360dialog o Meta)
WHATSAPP_API_URL=https://waba.360dialog.io/v1/messages
WHATSAPP_API_KEY=pon_tu_api_key_aqui

# API de OpenAI (GPT)
OPENAI_API_KEY=pon_tu_api_key_aqui
OPENAI_MODEL=gpt-4
